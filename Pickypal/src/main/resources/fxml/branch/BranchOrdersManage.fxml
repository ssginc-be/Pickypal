                                        <TableColumn fx:id="productNameColumn" prefWidth="114.0" text="상품명" />
                                        <!-- 발주 수량 컬럼 -->
                                        <TableColumn fx:id="ordersAmountColumn" minWidth="5.0" prefWidth="107.0" text="발주 수량" />
                                        <!-- 단가 컬럼 -->
                                        <TableColumn fx:id="priceColumn" prefWidth="83.0" text="단가" />
                                        <!-- 발주 상태 컬럼 -->
                                        <TableColumn fx:id="ordersStatusColumn" prefWidth="93.0" text="발주 상태" />
                                        <!-- 발주 날짜 컬럼 -->
                                        <TableColumn fx:id="ordersDateColumn" prefWidth="195.0" text="발주 날짜" />
                                    </columns>
                                </TableView>
                                <Pagination prefHeight="7.0" prefWidth="824.0" />
                            </children>
                        </VBox>
                    </center>
                </BorderPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
