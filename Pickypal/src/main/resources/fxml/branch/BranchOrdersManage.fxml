        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <BorderPane prefHeight="768.0" prefWidth="1024.0">
                    <!-- 공통 nav -->
                    <left>
                    <fx:include source="../common/BranchNav.fxml" />
                    </left>
                    <!-- 공통 header -->
                    <top>
                        <fx:include source="../common/Header.fxml" />
                    </top>
                    <center>
                        <VBox prefHeight="700.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                            <children>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <Button layoutX="751.0" layoutY="63.0" mnemonicParsing="false" text="Excel" />
                                        <Button layoutX="643.0" layoutY="63.0" mnemonicParsing="false" onAction="#deleteSelectedOrder" text="발주 삭제" />
                                        <TextField fx:id="productIDField" layoutX="80.0" layoutY="21.0" />
                                        <Text layoutX="30.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="상품 ID">
                                            <font>
                                                <Font name="SUIT Medium" size="12.0" />
                                            </font>
                                        </Text>
                                        <TextField fx:id="productNameField" layoutX="319.0" layoutY="21.0" />
                                        <Text layoutX="272.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="상품명">
                                            <font>
                                                <Font name="SUIT Medium" size="12.0" />
                                            </font>
                                        </Text>
                                        <DatePicker fx:id="orderDatePicker" focusTraversable="false" layoutX="575.0" layoutY="20.0" />
                                        <Text layoutX="510.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="발주 날짜">
                                            <font>
                                                <Font name="SUIT Medium" size="12.0" />
                                            </font>
                                        </Text>
                                        <Text layoutX="30.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" text="필터링">
                                            <font>
                                                <Font name="SUIT Medium" size="12.0" />
                                            </font>
                                        </Text>
                                        <ComboBox fx:id="productCategoryComboBox" layoutX="80.0" layoutY="63.0" prefHeight="29.0" prefWidth="124.0" promptText="카테고리" />
                              <Button layoutX="463.0" layoutY="63.0" mnemonicParsing="false" text="검색" />
                              <Button layoutX="540.0" layoutY="63.0" mnemonicParsing="false" onAction="#enrollOrder" text="발주 등록" />
                                    </children>
                                </AnchorPane>
                                <TableView fx:id="ordersTable" prefHeight="652.0" prefWidth="824.0">
                                    <columns>
                                        <!-- 선택 (체크박스) 컬럼 -->
                                        <TableColumn fx:id="selectColumn" prefWidth="47.0" text="선택" />
                                        <!-- 발주 ID 컬럼 -->
                                        <TableColumn fx:id="ordersIDColumn" prefWidth="76.0" text="발주 ID" />
                                        <!-- 상품 ID 컬럼 -->
                                        <TableColumn fx:id="productIDColumn" prefWidth="108.0" text="상품 ID" />
